{
    "compilerOptions": {
        "module": "nodenext",
        "target": "ES2021",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "outDir": "out",
        "declaration": true,
        "allowJs": true,
        "checkJs": true,
        "strict": true
    },
    "include": [
        "src/**/*.ts",
        "test/**/*.ts"
    ],
    "exclude": [
        "out/*",
        "node_modules",
        "jest.config.js"
    ]
}